#include <iostream>
using namespace std;

int main() {
    int x=1;
    int total=0;
    int pares=0;
    int impares=0;

    cout << "Ingresa un numero: \n";

    while (x!=0){
        cin >> x;
        total+=1;
        if (x%2==0){
            pares+=1;
        }
        else if (x%2!=0){
            impares+=1;
        }
    }
    cout << "Cantidad total: " << total << endl;
    cout << "cantidad de pares: " << pares << endl;
    cout << "Cantidad de impares: " << impares << endl;
}

