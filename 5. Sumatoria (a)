#include <iostream>
using namespace std;

int main(){
    int i=0;
    int pares=0;
    int n=0;
    cout << "¿Hasta qué número se ralizará la sumatoria? \n";
    cin >> n;
    for (int i=2; i<=n; i+=2){
            pares+=i;
    }
    cout << "La sumatoria de todos los pares hasta " << n << " es: " << pares << endl;
}
