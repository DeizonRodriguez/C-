#include <iostream>
#include <cmath>


using namespace std;


void DistanciaDesdePunto(int n,int PuntoInicio){
    float distancia=0;
    int borde=0;
    double c=0,f=0,x=0,y=0;
    char arrN[n][n];
    int prob;

    c = PuntoInicio;
    f = PuntoInicio;
    arrN[(centro)][(centro)]= '.';

    while(borde==0){
        prob = rand()%4;
        switch (prob){
            case 0:
                arrN[f][c]= '';
                arrN[f+1][c]= '.';
                c=c+1;
                y = y+1;
            case 1:
                arrN[f][c]= '';
                arrN[f-1][c]= '.';
                c=c-1;
                y = y-1

            case 2:
                arrN[f][c]= '';
                arrN[f][c+1]= '.';
                x=x+1;

            case 3:
                arrN[f][c]= '';
                arrN[f][c-1]= '.';
                x=x-1;
        }
        for (int i = 0; i < ; ++i) {
            if((arrN[i][n-1]!='.')||(arrN[n-1][i]!='.')||(arrN[0][i]!='.')||(arrN[i][0]!='.'))
                borde = 0;
            else
                borde = 1;
        }

    }
    distancia = sqrt(pow(x,2)+pow(y,2));
    cout << distancia << endl();

}

int main() {
