#include <iostream>

using namespace std;

int main() {
    int c,f;
    int centro;
    int contador=0;
    float distancia=0;
    int n;
    cin >> n;
    if (n%2==0)
        n=n+1;

    char arrN[n][n];
    int prob;
    centro = (n-1)/2;
    c = centro;
    f = centro;
    prob = rand()%4;
    arrN[(centro)][(centro)]= '.';

    if ((arrN[contador][n-1]!='.')||(arrN[n-1][contador])){

    }
    switch (prob){
        case 0:
            arrN[(c)][(f)]= '';
            arrN[(c+1)][(f)]= '.';
            c=c+1;
        case 1:
            arrN[(c)][(f)]= '';
            arrN[(c-1)][(f)]= '.';
            c=c-1;
        case 2:
            arrN[(c)][(f)]= '';
            arrN[(c)][(f+1)]= '.';
            f=f+1;
        case 3:
            arrN[(c)][(f)]= '';
            arrN[(c)][(f-1)]= '.';
            f=f-1;

    }



    return 0;
}
